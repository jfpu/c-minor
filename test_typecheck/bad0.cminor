// Test case 0
// Declarations

// Global declarations must be initialized with constant values
a: integer;
a1: integer = a;
a_arr: array [3] integer = {a1, a1, a1};

main: function void () = {

  // void is not a valid type for variables
  { a: void; }
  { a: void = 1; }

  // Initialization must type check
  { a: integer = true; }
  { a: integer = 'c'; }
  { a: integer = "abc"; }
  { a: boolean = 1; }
  { a: boolean = 'c'; }
  { a: boolean = "abc"; }
  { a: char = 1; }
  { a: char = true; }
  { a: char = "abc"; }
  { a: string = 1; }
  { a: string = true; }
  { a: string = 'c'; }

  // Array declaration must have positive const size
  { a: array [] integer; }
  { a: array [1 + 2] integer; }
  { b: integer = 3; a: array [b] integer; }
  { a: array [0] integer; }
  { a: array [-1] integer; }

  // Array initialization must have the correct type
  { a: array [3] integer = {true, 2, 3}; }
  { a: array [3] integer = {1, true, 'c'}; }
  { a: array [3] integer = {'c', 2, 3}; }
  { a: array [3] integer = {"s", 2, 3}; }

  // Array initialization must have the correct length
  { a: array [0] integer = {1, 2, 3}; }
  { a: array [4] integer = {1, 2, 3}; }

  // Complex array declaration should work too
  { a: array [1] array [b] integer; }
  { a: array [1] array [2] void; }
}
